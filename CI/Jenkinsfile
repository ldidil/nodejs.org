pipeline {
    agent any
   
	parameters {
		string(name: 'version', defaultValue: '', description: 'App version')
	}

    stages {
  
        stage("build") {
            steps {
                echo "building.." 
				   sh 'docker build . -f build.dockerfile -t builder'
            }
        }
        
        stage('test') {
            steps {
			  sh 'docker build . -f test.dockerfile -t tester'
			  sh' docker run tester'
            }
        }
   } 
}